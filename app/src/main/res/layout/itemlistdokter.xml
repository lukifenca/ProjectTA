<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/baseline_menu_24"
    app:cardBackgroundColor="#174949">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/bgkonten"
        android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imageprofilekonsultasidokter"
            android:layout_width="113dp"
            android:layout_height="200dp"
            android:baselineAlignBottom="false"
            android:tint="#1FC8C6"
            app:civ_border="false"
            app:civ_border_width="5dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#3f51b5"
            app:srcCompat="@drawable/ic_baseline_person_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNamaDokter"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Dr."
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/baseline_date_range_24" />

                    <TextView
                        android:id="@+id/txtKonsulLamaPraktek"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="11 Tahun"
                        android:textAlignment="textStart"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txtHargaKonsultasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rp. 25000"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="Pilih"
                android:textColor="#1FC8C6"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>