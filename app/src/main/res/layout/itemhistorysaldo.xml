<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgkonten"
    app:cardBackgroundColor="#1FC8C6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/bgkonten"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0"
            android:backgroundTint="#FFFFFF"
            app:srcCompat="@drawable/ic_baseline_account_balance_wallet_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/andika"
                android:text="Tipe Transaksi"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtTanggal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/andika"
                android:layout_weight="1"
                android:text="31 Januari 2022 - 14:48"
                android:textAlignment="textStart"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/andika"
                android:layout_weight="1"
                android:text="Sukses"
                android:textAlignment="textStart" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtsaldo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/andika"
            android:layout_weight="1"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Rp. 500.000.000,-"
            android:textAlignment="viewEnd"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>